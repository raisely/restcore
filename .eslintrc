{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": "true",
    "browser": true,
    "es6": true,
    "mocha": true,
  },
  "rules": {
    "no-mixed-spaces-and-tabs": "off",
    "require-yield": "off",
    "no-unmodified-loop-condition": "error",
    "no-void": "error",
    "one-var": ["error", "never"],
    "no-extra-boolean-cast": "off",
    "no-shadow": ["warn"],
  }
}